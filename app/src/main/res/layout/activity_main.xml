<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.sloveniafacts.MainActivity" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image"
            android:src="@drawable/img_slovenia" />

        <TextView
            style="@style/HeaderStyle"
            android:text="@string/introduction"/>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="@string/q1"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/asia_radio_button"
                android:text="@string/a1_radio_a" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/europe_radio_button"
                android:text="@string/a1_radio_b" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/south_america_radio_button"
                android:text="@string/a1_radio_c" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="@string/q2"/>

        <EditText
            android:id="@+id/capital_name_field"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/a2_input_capital"
            android:inputType="textCapWords"/>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="@string/q3" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/mio2_radio_button"
                android:text="@string/a3_radio_a" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/mio5_radio_button"
                android:text="@string/a3_radio_b" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/mio10_radio_button"
                android:text="@string/a3_radio_c" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="@string/q4" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/sea_checkbox"
            android:text="@string/a4_chk_a" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/desert_checkbox"
            android:text="@string/a4_chk_b" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/alps_checkbox"
            android:text="@string/a4_chk_c" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/jungle_checkbox"
            android:text="@string/a4_chk_d" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/caves_checkbox"
            android:text="@string/a4_chk_e" />

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="@string/q5" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest10_radio_button"
                android:text="@string/a5_radio_a" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest30_radio_button"
                android:text="@string/a5_radio_b" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest60_radio_button"
                android:text="@string/a5_radio_c" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest80_radio_button"
                android:text="@string/a5_radio_d" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="6. What seasons does Slovenia have?" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/summer_radio_button"
                android:text="@string/a6_radio_a" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/seasons_hot_radio_button"
                android:text="@string/a6_radio_b" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/seasons_normal_radio_button"
                android:text="@string/a6_radio_c" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/winter_radio_button"
                android:text="@string/a6_radio_d" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="@string/q7" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/potica_checkbox"
            android:text="@string/a7_chk_a" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/pizza_checkbox"
            android:text="@string/a7_chk_b" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/cepelinai_checkbox"
            android:text="@string/a7_chk_c" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/zlinkrofi_checkbox"
            android:text="@string/a7_chk_d" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/carniolan_sausage_checkbox"
            android:text="@string/a7_chk_e" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/borscht_checkbox"
            android:text="@string/a7_chk_f" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="seeResults"
            android:text="@string/results" />

        <TextView
            style="@style/RatingStyle"
            android:text="@string/rate"
            android:gravity="center"/>

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_gravity="center"/>

        <Button
            style="@style/ButtonStyle"
            android:onClick="sendEmail"
            android:text="@string/email" />
    </LinearLayout>
</ScrollView>
