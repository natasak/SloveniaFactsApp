<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.sloveniafacts.MainActivity" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/img_slovenia" />

        <TextView
            style="@style/HeaderStyle"
            android:text="How well do you know the country of Slovenia? Answer questions below and find out!"/>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="1. Where is Slovenia?"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/asia_radio_button"
                android:text="Asia" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/europe_radio_button"
                android:text="Europe" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/south_america_radio_button"
                android:text="South America" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="2. Name the Slovenia's Capital."/>

        <EditText
            android:id="@+id/capital_name_field"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Write the Capital"
            android:inputType="textCapWords"/>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="3. How big is the population (in million)?" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/mio2_radio_button"
                android:text="2m" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/mio5_radio_button"
                android:text="5m" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/mio10_radio_button"
                android:text="10m" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="4. What do you find in Slovenia? Select all that apply." />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/sea_checkbox"
            android:text="Sea" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/desert_checkbox"
            android:text="Desert" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/alps_checkbox"
            android:text="Alps" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/jungle_checkbox"
            android:text="Jungle" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/caves_checkbox"
            android:text="Caves" />

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="5. How much forests does Slovenia have?" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest10_radio_button"
                android:text="10 %" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest30_radio_button"
                android:text="30 %" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest60_radio_button"
                android:text="60 %" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/forest80_radio_button"
                android:text="80 %" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="6. What seasons does Slovenia have?" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/summer_radio_button"
                android:text="Summer all year" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/seasons_hot_radio_button"
                android:text="Summer (too hot to work), Autumn, Winter (no snow), Spring" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/seasons_normal_radio_button"
                android:text="Summer (lets find a shadow hot), Autumn, Winter (with snow), Spring" />
            <RadioButton
                style="@style/SelectionStyle"
                android:id="@+id/winter_radio_button"
                android:text="Winter all year" />
        </RadioGroup>

        <TextView
            style="@style/QuestionsTextStyle"
            android:text="7. What dishes do you definetly want to try in Slovenia?" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/potica_checkbox"
            android:text="Potica" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/pizza_checkbox"
            android:text="Pizza" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/cepelinai_checkbox"
            android:text="Cepelinai" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/zlinkrofi_checkbox"
            android:text="Å½linkrofi" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/carniolan_sausage_checkbox"
            android:text="Carniolan Sausage" />

        <CheckBox
            style="@style/SelectionStyle"
            android:id="@+id/borscht_checkbox"
            android:text="Borscht" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="seeResults"
            android:text="See results!" />

        <TextView
            style="@style/RatingStyle"
            android:text="How would you rate this app?"
            android:gravity="center"/>

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_gravity="center"/>

        <Button
            style="@style/ButtonStyle"
            android:onClick="sendEmail"
            android:text="Send the answers to my email!" />
    </LinearLayout>
</ScrollView>
